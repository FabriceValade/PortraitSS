<Window x:Class="PortraitEditor.View.FileWriterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PortraitEditor.View"
        xmlns:vmw="clr-namespace:PortraitEditor.ViewModel.SubWindows"
        mc:Ignorable="d"
        Title="FileWriterWindow" Height="450" Width="800">

    <Window.Resources>
        <vmw:CollectionToVisibilityConverter x:Key="CollectionVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Border Style="{StaticResource ElementBorder}" >
                <local:SSFactionGroupCollectionView x:Name="FactionGroupWriteCollectionView"
                                            Grid.Row="0" Grid.Column="0" 
                                            Margin="7,7,7,7"
                                            HeldCollection="{Binding Path=ModifiedFactionList}" 
                                            />
            </Border>
            <Border Style="{StaticResource ElementBorder}" >
                <StackPanel Orientation="Horizontal" Margin="7,7,7,7">
                    <Button Content="Create Append files" Command="{Binding Path=AppendFilesCommand}"/>
                    <Button Content="Add external images to mod" Command="{Binding Path=CopyImagesToModCommand}"/>
                    
                </StackPanel>
            </Border>
        </StackPanel>
        <Border Style="{StaticResource ElementBorder}" Grid.Row="0" Grid.Column="1">
            <StackPanel Orientation="Vertical" Margin="7,7,7,7" >
                <Border BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Added Images"/>
                        <ListView ItemsSource="{Binding ElementName=FactionGroupWriteCollectionView, Path=ViewModel.HeldCollection/BufferAddedPortraits}"  
                                  Background="Transparent" 
                                  SelectedIndex="0" 
                                  BorderThickness="0"
                                  Style = "{StaticResource PortraitListView}" >
                        </ListView>
                    </StackPanel>
                </Border>
                <Border BorderThickness="0" Visibility="{Binding ElementName=FactionGroupWriteCollectionView, Path=ViewModel.HeldCollection/BufferRemovedPortraits,  Converter={StaticResource CollectionVisibilityConverter}}" >
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Removed Images"/>
                        <ListView ItemsSource="{Binding ElementName=FactionGroupWriteCollectionView, Path=ViewModel.HeldCollection/BufferRemovedPortraits}"   
                                  Background="Transparent" 
                                  SelectedIndex="0" 
                                  BorderThickness="0"
                                  Style = "{StaticResource PortraitListView}" >
                        </ListView>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
